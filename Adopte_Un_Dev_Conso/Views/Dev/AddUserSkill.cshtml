@model Adopte_Un_Dev_Conso.Models.AddUserSkillModel

@{
    ViewData["Title"] = "Nouveau Skill";
}

<h1>Nouveau Skill</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUserSkill">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <input asp-for="UserID" class="form-control" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkillID" class="control-label"></label>
                <input asp-for="SkillID" class="form-control" />
                <span asp-validation-for="SkillID" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label class="control-label">Choisissez un skill</label>
                <select asp-for="SkillID" class="form-control">
                    @foreach (var list in Model.ListSkills)
                    {
                        <option value="@list.SkillID">@list.CName - @list.Name</option>
                    }
                    
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetDevWithSkills">Annuler</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
