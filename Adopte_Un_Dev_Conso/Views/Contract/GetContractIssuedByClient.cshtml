            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ListContract) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContractID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeadLine)
            </td>
